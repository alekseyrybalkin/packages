pkgname=docker-compose
pkgver=1.26.0
vcs=git
vcs_pkgname=compose
gittag=${pkgver}
relmon_id=6185

build() {
    sed -i 's/==/>=/g' requirements.txt
    sed -i "s/, < .*',$/',/" setup.py
}

package() {
    pip install \
        --no-deps \
        --no-build-isolation \
        --ignore-installed \
        --compile \
        --prefix=/usr \
        --root=${pkgdir} .
}
