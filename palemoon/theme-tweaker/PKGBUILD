pkgname=theme-tweaker
pkgver=1.0.0
vcs=git
gittag=v${pkgver}

build() {
    :
}

package() {
    mkdir -p ${pkgdir}/usr/lib/palemoon/browser/extensions
    emid=$(sed -n -e '/<\?em:id>\?/!d; s/.*\([\"{].*[}\"]\).*/\1/; s/\"//g; p; q' src/install.rdf)
    cd src
    zip -r ${pkgdir}/usr/lib/palemoon/browser/extensions/${emid}.xpi *
}
