pkgname=theme-tweaker
pkgver=1.0.0
vcs=git
gittag=v${pkgver}

build() {
    :
}

package() {
    mkdir -p ${pkgdir}/usr/lib/palemoon/browser/extensions
    extension_id="{d9990772-0e04-4731-b98e-98e62085837f}"
    cd src
    zip -r ${pkgdir}/usr/lib/palemoon/browser/extensions/${extension_id}.xpi *
}
