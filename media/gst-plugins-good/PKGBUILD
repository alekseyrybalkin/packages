pkgname=gst-plugins-good
pkgver=1.18.4
vcs=git
gittag=${pkgver}
relmon_id=21852
updater_rules="skip_odd_second"

build() {
    mkdir build
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        -D doc=disabled \
        -D examples=disabled \
        -D tests=disabled \
        -D gobject-cast-checks=disabled \
        . build
    ninja -C build
}

package() {
    DESTDIR=${pkgdir} ninja -C build install
}
