pkgname=glfw
pkgver=3.3.3.0.1
vcs=git
# 33cd8b865d9289cfbcf3d95e6e68e4050b94fcd3
gittag=handmade-${pkgver}
relmon_id=1180

build() {
    mkdir build
    cd build
    cmake .. \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib \
        -DBUILD_SHARED_LIBS=ON \
        -DGLFW_USE_WAYLAND=ON
    make
}

package() {
    cd build
    make DESTDIR=${pkgdir} install
}
