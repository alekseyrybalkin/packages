pkgname=libdrm
pkgver=2.4.104
vcs=git
gittag=libdrm-${pkgver}
relmon_id=1596

build() {
    patch -Np1 -i ../remove_libpciaccess.patch

    mkdir build
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        . build
    ninja -C build
}

package() {
    DESTDIR=${pkgdir} ninja -C build install
}
