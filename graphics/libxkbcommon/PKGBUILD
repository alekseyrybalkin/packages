pkgname=libxkbcommon
pkgver=1.1.0
vcs=git
gittag=xkbcommon-${pkgver}
relmon_id=1780
updater_rules='lstrip_xkbcommon'

build() {
    mkdir build
    meson --prefix=/usr -D libexecdir=/usr/lib -D sysconfdir=/etc \
        -D enable-wayland=true \
        -D enable-x11=false \
        -D enable-docs=false \
        . build
    ninja -C build
}

package() {
    DESTDIR=${pkgdir} ninja -C build install
}
