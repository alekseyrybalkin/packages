pkgname=libseat
pkgver=0.5.0
vcs=git
vcs_pkgname=seatd
gittag=${pkgver}

build() {
    mkdir build
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        -D examples=disabled \
        -D man-pages=enabled \
        . build
    ninja -C build
}

package() {
    DESTDIR=${pkgdir} ninja -C build install
}
