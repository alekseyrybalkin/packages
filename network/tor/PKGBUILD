pkgname=tor
pkgver=0.4.4.6
vcs=git
gittag=tor-${pkgver}
relmon_id=4991

build() {
    autoreconf -fi
    ./configure --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-zstd \
        --disable-seccomp \
        --disable-asciidoc
    make
}

package() {
    make DESTDIR=${pkgdir} install
    install -Dm0644 contrib/dist/tor.service ${pkgdir}/usr/lib/systemd/system/tor.service
}

after_install() {
    getent group tor >/dev/null || groupadd -g 43 tor
    getent passwd tor >/dev/null || \
        useradd -c 'tor' -d /var/lib/tor -g tor \
        -s /bin/false -u 43 tor

    install -dv -m 0700 /var/lib/tor
    chown -R tor:tor /var/lib/tor
}

after_upgrade() {
    after_install
}
