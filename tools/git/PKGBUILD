pkgname=git
pkgver=2.31.0
vcs=git
gittag=v${pkgver}
relmon_id=5350

build() {
    make configure
    ./configure --prefix=/usr \
        --libexecdir=/usr/lib \
        --with-gitconfig=/etc/gitconfig
    make
}

package() {
    make DESTDIR=${pkgdir} install
    find ${pkgdir} -name perllocal.pod -delete
    find ${pkgdir} -name .packlist -delete
}
