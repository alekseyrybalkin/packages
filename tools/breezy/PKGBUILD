pkgname=breezy
SKIP_ARCH_CHECK=1
pkgver=3.0.1
vcs=git
gittag=brz-${pkgver}

build() {
    # https://code.launchpad.net/~jelmer/brz/python3.8/+merge/374164
    # Fix hash for StaticTuple when run with Python3.8
    patch -Np0 -i ../breezy-py38.patch

    python setup.py build
}

package() {
    python setup.py install --prefix=/usr --root=${pkgdir} --install-data="usr/share" --optimize=1
}
