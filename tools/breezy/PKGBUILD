pkgname=breezy
pkgver=3.0.2.5
vcs=git
# d02249e1400dd18713982b25f1ebdaaf1ccf801c
gittag=jinni-${pkgver}
relmon_id=45817

build() {
    :
}

package() {
    pip install \
        --no-deps \
        --no-build-isolation \
        --ignore-installed \
        --compile \
        --prefix=/usr \
        --root=${pkgdir} .

    mkdir -p ${pkgdir}/usr/share
    mv ${pkgdir}/usr/{,share/}man
}
