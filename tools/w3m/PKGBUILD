pkgname=w3m
pkgver=0.5.3+git20200502
vcs=git
gittag=v${pkgver}
relmon_id=5115
updater_rules="no_alpha_skips"

build() {
    ./configure \
        --prefix=/usr \
        --libexecdir=/usr/lib \
        --enable-image=no \
        --with-termlib=ncurses \
        --disable-w3mmailer
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
