pkgname=borg
pkgver=1.1.11
vcs=git
gittag=${pkgver}
relmon_id=10446

build() {
    :
}

package() {
    pip install \
        --no-deps \
        --no-build-isolation \
        --ignore-installed \
        --compile \
        --prefix=/usr \
        --root=${pkgdir} .
    install -Dm644 -t ${pkgdir}/usr/share/man/man1/ docs/man/*.1
}
