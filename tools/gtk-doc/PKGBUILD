pkgname=gtk-doc
pkgver=1.32
ARCH_VERSION=1.32+37+gefc3644
vcs=git
gittag=GTK_DOC_${pkgver//\./_}
relmon_id=13140
updater_rules='lstrip_gtk_doc'

build() {
    mkdir build
    meson --prefix=/usr -D libexecdir=/usr/lib -D sysconfdir=/etc . build
    ninja -C build
}

package() {
    DESTDIR=${pkgdir} ninja -C build install
}
