pkgname=apr
pkgver=1.7.0.0.1
vcs=git
# ea4a9ea7c715e1f6ea233a4c4f60e2d5df8321f4
gittag=jinni-${pkgver}
relmon_id=95

build() {
    ./buildconf
    sed -i -e 's/$RM "$cfgfile"/$RM -f "$cfgfile"/g' configure
    ./configure --prefix=/usr \
        --disable-static \
        --build=x86_64-unknown-linux-gnu \
        --with-pgsql=no \
        --with-installbuilddir=/usr/share/apr-1/build
    make
}

package() {
    MAKEFLAGS=
    make DESTDIR=${pkgdir} install
}
