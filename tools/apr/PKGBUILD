pkgname=apr
pkgver=1.7.0+
vcs=git
#FIXME apr 2.0 is not released yet
gittag=b4ee162cc661aef09f16a0dc7583259c5db63c59
#gittag=${pkgver}
relmon_id=95

build() {
    ./buildconf
    sed -i -e 's/$RM "$cfgfile"/$RM -f "$cfgfile"/g' configure
    ./configure --prefix=/usr \
        --disable-static \
        --build=x86_64-unknown-linux-gnu \
        --with-pgsql=no \
        --with-installbuilddir=/usr/share/apr-1/build
    make
}

package() {
    MAKEFLAGS=
    make DESTDIR=${pkgdir} install
}
