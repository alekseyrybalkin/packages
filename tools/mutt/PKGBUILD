pkgname=mutt
pkgver=2.0.6
vcs=git
gittag=mutt-${pkgver//\./-}-rel
relmon_id=2035
updater_rules='no_alpha_skips'

build() {
    rm -rf .git
    autoreconf -fi
    ./configure --prefix=/usr \
        --sysconfdir=/etc \
        --with-docdir=/usr/share/doc/mutt \
        --enable-pop \
        --enable-imap \
        --enable-smtp \
        --enable-hcache \
        --without-qdbm \
        --without-tokyocabinet \
        --with-gdbm \
        --without-bdb \
        --with-ssl \
        --with-sasl
    make
}

package() {
    make DESTDIR=${pkgdir} install
}

after_install() {
    install -dv -m 0755 /var/spool/mail
    chgrp -v mail /var/spool/mail
}

after_upgrade() {
    after_install
}
