pkgname=scons
pkgver=3.1.1
vcs=git
gittag=${pkgver}
relmon_id=4770

build() {
    :
}

package() {
    python bootstrap.py
    tar xvf build/dist/scons-${pkgver}.tar.gz
    cd scons-${pkgver}
    python setup.py install --standard-lib \
        --prefix=/usr \
        --install-data=/usr/share \
        --optimize=1 \
        --root=${pkgdir}
}
