pkgname=scons
pkgver=3.1.2
vcs=git
gittag=${pkgver}
relmon_id=4770

build() {
    :
}

package() {
    python bootstrap.py
    tar xvf build/dist/scons-${pkgver}.tar.gz
    cd scons-${pkgver}
    pip install \
        --no-deps \
        --no-build-isolation \
        --ignore-installed \
        --compile \
        --prefix=/usr \
        --root=${pkgdir} .

    mkdir -p ${pkgdir}/usr/share
    mv ${pkgdir}/usr/{,share/}man
}
