pkgname=mm-common
pkgver=1.0.2
vcs=git
gittag=${pkgver}
relmon_id=13152

build() {
    cp /usr/share/gcc-*/libstdc++.tag doctags/
    mkdir build
    meson --prefix=/usr -D libexecdir=/usr/lib -D sysconfdir=/etc . build
    ninja -C build
}

package() {
    DESTDIR=${pkgdir} ninja -C build install
}
