pkgname=at-spi2-atk
pkgver=2.38.0
vcs=git
gittag=AT_SPI2_ATK_${pkgver//\./_}
relmon_id=7840
updater_rules="skip_odd_second"

build() {
    mkdir build
    meson --prefix=/usr -D libexecdir=/usr/lib -D sysconfdir=/etc . build
    ninja -C build
}

package() {
    DESTDIR=${pkgdir} ninja -C build install
}
