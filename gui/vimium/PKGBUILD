pkgname=vimium
SKIP_ARCH_CHECK=1
pkgver=1.65
vcs=git
gittag=v${pkgver}

build() {
    # fix copying to clipboard with no JS
    git apply ../clipboard.diff

    rm -rf .git
    cake build
}

package() {
    mkdir -p ${pkgdir}/usr/lib/chromium/extensions/
    cp -r . ${pkgdir}/usr/lib/chromium/extensions/vimium
}
