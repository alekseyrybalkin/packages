pkgname=evince
pkgver=3.38.2
vcs=git
gittag=${pkgver}
relmon_id=8178
updater_rules="skip_odd_second"

build() {
    mkdir build
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        -D nautilus=false \
        -D gtk_doc=false \
        -D user_doc=false \
        -D comics=disabled \
        -D djvu=disabled \
        . build
    ninja -C build
}

package() {
    DESTDIR=${pkgdir} ninja -C build install
}

after_install() {
    glib-compile-schemas /usr/share/glib-2.0/schemas
}

after_upgrade() {
    after_install
}
