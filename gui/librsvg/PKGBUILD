pkgname=librsvg
pkgver=2.40.21
vcs=git
gittag=${pkgver}
relmon_id=5420

build() {
    sed -i -e '/gtkdocize/d' autogen.sh
    sed -i -e 's/ doc//g' Makefile.am
    sed -i -e '/gtk-doc/d' Makefile.am
    sed -i -e '/doc\//d' configure.ac
    sed -i -e '/GTK_DOC_CHECK/d' configure.ac

    ./autogen.sh --prefix=/usr \
        --disable-static \
        --disable-gtk-doc \
        --disable-introspection
    make
}

package() {
    make DESTDIR=${pkgdir} install
}

after_install() {
    gdk-pixbuf-query-loaders --update-cache
}

after_upgrade() {
    after_install
}
