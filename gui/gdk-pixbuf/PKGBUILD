pkgname=gdk-pixbuf
pkgver=2.40.0
vcs=git
gittag=${pkgver}
relmon_id=9533
updater_rules='skip_big_second'

build() {
    mkdir build
    meson --prefix=/usr -D libexecdir=/usr/lib . build
    ninja -C build
}

package() {
    DESTDIR=${pkgdir} ninja -C build install
}

after_install() {
    gdk-pixbuf-query-loaders --update-cache
}

after_upgrade() {
    after_install
}

generated_files="usr/lib/gdk-pixbuf-2.0/2.10.0/loaders.cache"
