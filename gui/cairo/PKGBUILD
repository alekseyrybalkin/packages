pkgname=cairo
vcs=git
pkgver=1.17.2.0.1
# aee96d175d8349945a6d1948a56abd4b4ec6ad84
gittag=jinni-${pkgver}
relmon_id=247

build() {
    sed -i -e 's/lzo2a.h/withoutlzo.h/g' configure.ac
    NOCONFIGURE=1 ./autogen.sh
    #sed -i -e '/lzo/d' Makefile.in
    ./configure --prefix=/usr \
        --disable-static \
        --enable-gl \
        --enable-egl \
        --enable-tee \
        --libdir=$LIBDIR
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
