pkgname=cairo
vcs=git
pkgver=1.17.2+
ARCH_VERSION=1.17.2+17+g52a7c79fd
#FIXME no 1.18 release yet
gittag=52a7c79fd4ff96bb5fac175f0199819b0f8c18fc
#gittag=${pkgver}
# includes rcairo versions from https://cairographics.org/releases/
#relmon_id=247
#relmon_rules="skip_odd_second"

build() {
    sed -i -e 's/lzo2a.h/withoutlzo.h/g' configure.ac
    NOCONFIGURE=1 ./autogen.sh
    #sed -i -e '/lzo/d' Makefile.in
    ./configure --prefix=/usr \
        --disable-static \
        --enable-gl \
        --enable-egl \
        --enable-tee \
        --libdir=$LIBDIR
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
