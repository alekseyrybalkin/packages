pkgname=cairo
vcs=git
pkgver=1.17.4
gittag=${pkgver}
relmon_id=247

build() {
    sed -i -e 's/lzo2a.h/withoutlzo.h/g' configure.ac
    NOCONFIGURE=1 ./autogen.sh
    ./configure --prefix=/usr \
        --disable-static \
        --enable-gl \
        --enable-egl \
        --enable-tee \
        --libdir=/usr/lib
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
