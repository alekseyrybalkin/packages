pkgname=ublock
pkgver=1.16.4.26
vcs=git
vcs_pkgname=ublock-for-firefox-legacy
gittag=firefox-legacy-${pkgver}

build() {
    cd ../
    git clone `find_vcs_repo uassets` uAssets
    cd ${srcdir}
    ./tools/make-firefox-legacy.sh all
}

package() {
    mkdir -p ${pkgdir}/usr/lib/palemoon/browser/extensions
    extension_id="uBlock0@raymondhill.net"
    cp -r dist/build/*.xpi ${pkgdir}/usr/lib/palemoon/browser/extensions/${extension_id}.xpi
    find ${pkgdir} -type d -exec chmod 0755 {} \;
    find ${pkgdir} -type f -exec chmod 0644 {} \;
}
