pkgname=jinni-icon-theme
pkgver=1
vcs=git
gittag=v${pkgver}

build() {
    :
}

package() {
    mkdir -p ${pkgdir}/usr/share/icons
    cp -r Adwaita ${pkgdir}/usr/share/icons/
}

after_install() {
    gtk-update-icon-cache -q -t -f /usr/share/icons/Adwaita
}

after_upgrade() {
    after_install
}

generated_files="usr/share/icons/Adwaita/icon-theme.cache"
