pkgname=at-spi2-core
pkgver=2.38.0
vcs=git
gittag=AT_SPI2_CORE_${pkgver//\./_}
relmon_id=7841
updater_rules="skip_odd_second"

build() {
    mkdir build
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        -D introspection=no \
        . build
    ninja -C build
}

package() {
    DESTDIR=${pkgdir} ninja -C build install
    # disable autostart
    rm -rf ${pkgdir}/etc/xdg/
}
