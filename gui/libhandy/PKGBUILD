pkgname=libhandy
pkgver=1.2.1
vcs=git
gittag=${pkgver}
relmon_id=114486

build() {
    mkdir build
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        -D introspection=disabled \
        -D glade_catalog=disabled \
        -D vapi=false \
        -D tests=false \
        -D examples=false \
        . build
    ninja -C build
}

package() {
    DESTDIR=${pkgdir} ninja -C build install
}
