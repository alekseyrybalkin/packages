pkgname=foot
pkgver=1.7.1
vcs=git
gittag=${pkgver}
relmon_id=141611

build() {
    patch -Np1 -i ../disable_docs.patch

    mkdir build
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        -D ime=false \
        . build
    ninja -C build
}

package() {
    DESTDIR=${pkgdir} ninja -C build install
}
