pkgname=fluxbox
pkgver=1.3.7
vcs=git
gittag=Release-${pkgver//\./_}
relmon_id=824

build() {
    ./autogen.sh
    ./configure --prefix=/usr --disable-imlib2
    make
    gcc `pkg-config --cflags --libs cairo x11` ../sss.c -o sss
}

package() {
    make DESTDIR=${pkgdir} install
    cp sss ${pkgdir}/usr/bin/
}
