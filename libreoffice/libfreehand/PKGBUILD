pkgname=libfreehand
pkgver=0.1.2
vcs=git
gittag=libfreehand-${pkgver}
relmon_id=1616

build() {
    # fix build with icu 65.1
    git cherry-pick af3197f795625f5188602073205a34369698b6df

    ./autogen.sh
    ./configure --prefix=/usr \
        --disable-werror \
        --disable-tests
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
