pkgname=linux
vcs=git
pkgver=5.8.11
gittag=v${pkgver}
relmon_id=6501

build() {
    make mrproper
    cp -v ../config-x86_64 .config
    make

    set +e
    make htmldocs
    set -e
}

package() {
    . /usr/lib/addons/helpers.bash

    mkdir -pv ${pkgdir}/boot
    cp -v arch/x86_64/boot/bzImage ${pkgdir}/boot/vmlinuz-`guess_distro`
    if [ -d Documentation/output ]; then
        mkdir -pv ${pkgdir}/usr/share/doc
        cp -r Documentation/output ${pkgdir}/usr/share/doc/linux
    fi
}
