pkgname=linux
vcs=git
pkgver=5.11.12
gittag=v${pkgver}
relmon_id=6501

build() {
    make mrproper
    cp -v ../config-x86_64 .config
    make
}

package() {
    KERNEL_ALIAS=$(hostconf kernel)

    mkdir -pv ${pkgdir}/boot
    cp -v arch/x86_64/boot/bzImage ${pkgdir}/boot/vmlinuz-${KERNEL_ALIAS}
}
