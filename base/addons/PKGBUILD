pkgname=addons
pkgver=1
vcs=git

build() {
    ./bootstrap
}

package() {
    cp -av etc usr ${pkgdir}/

    chown root:${PACMAN} ${pkgdir}/usr/bin/*
    chmod 750 ${pkgdir}/usr/bin/*
    chmod 755 ${pkgdir}/usr/bin/trust-local-certs

    chown root:root ${pkgdir}/usr/lib/addons/gen-jinni-environment.bash
    chmod 600 ${pkgdir}/usr/lib/addons/gen-jinni-environment.bash
}
