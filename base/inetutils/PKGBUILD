pkgname=inetutils
pkgver=1.9.4.0.1
vcs=git
# 393f4c6c3e3761ceed843cb3990169a5ef2f89d1
gittag=jinni-inetutils-${pkgver//\./_}
relmon_id=13805

build() {
    git clone -s `find_vcs_repo gnulib`
    ./bootstrap --skip-po
    ./configure --prefix=/usr \
        --libexecdir=/usr/bin \
        --localstatedir=/var \
        --disable-ifconfig \
        --disable-logger \
        --disable-syslogd \
        --disable-whois \
        --disable-servers \
        --build=x86_64-unknown-linux-gnu
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
