pkgname=cryptsetup
pkgver=2.3.1.0.1
vcs=git
# 33378792ca18a8d5917a65a3c05209a5400ea9bd
gittag=jinni-v${pkgver}
relmon_id=13709

build() {
    ./autogen.sh
    ./configure --prefix=/usr \
        --disable-static \
        --with-crypto_backend=openssl
    make
}

package() {
    make DESTDIR=${pkgdir} install
    mv ${pkgdir}/usr/{sbin,bin}
}
