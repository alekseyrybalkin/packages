# used while building linux kernel
pkgname=elfutils
pkgver=0.182
vcs=git
gittag=elfutils-${pkgver}
relmon_id=5679

build() {
    autoreconf -fi
    ./configure --prefix=/usr \
        --program-prefix="eu-" \
        --enable-deterministic-archives \
        --enable-maintainer-mode \
        --disable-debuginfod \
        --disable-libdebuginfod
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
