pkgname=ji
SKIP_ARCH_CHECK=1
pkgver=47+
vcs=git

build() {
    if [ "`hostname`" == "rybalkin.org" ]; then
        sed -i -e 's/rybalkin/aleksey/g' conf.bash
        sed -i -e 's/projects/sandbox/g' conf.bash
    fi
}

package() {
    mkdir -p ${pkgdir}/{etc,usr/bin,usr/lib/ji}
    cp exe ${pkgdir}/usr/bin/ji
    cp util.py relmon_server.py ${pkgdir}/usr/lib/ji/
    cp conf.bash ${pkgdir}/etc/ji.conf
}
