pkgname=ji
pkgver=73
vcs=git
gittag=v${pkgver}

build() {
    :
}

package() {
    mkdir -p ${pkgdir}/{usr/bin,usr/lib/ji}
    cp exe ${pkgdir}/usr/bin/ji
    cp util.py ${pkgdir}/usr/lib/ji/
}

after_install() {
    mkdir -pv /var/lib/jinni/{installed,uninstalled}
}

after_upgrade() {
    after_install
}
