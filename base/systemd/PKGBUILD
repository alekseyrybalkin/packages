pkgname=systemd
pkgver=245.4
vcs=git
gittag=v${pkgver}
relmon_id=5440

build() {
    sed -i 's/GROUP="render", //' rules.d/50-udev-default.rules.in

    mkdir -p build
    cd build

    CFLAGS+=" -Wno-format-overflow" \
    meson --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        -Dblkid=true \
        -Dbuildtype=release \
        -Ddefault-hierarchy=hybrid \
        -Ddefault-dnssec=no \
        -Dfirstboot=false \
        -Dinstall-tests=false \
        -Dldconfig=false \
        -Drootprefix= \
        -Drootlibdir=/usr/lib \
        -Dsplit-usr=false \
        -Dsysusers=false \
        -Drpmmacrosdir=no \
        -Db_lto=false \
        -Dman=true \
        -Dseccomp=false \
        ..
    ninja
}

package() {
    cd build
    DESTDIR=${pkgdir} ninja install
    rm -rvf ${pkgdir}/var
    rm -rvf ${pkgdir}/usr/lib/rpm

    for conf in journald logind system user; do
        mv ${pkgdir}/etc/systemd/${conf}.conf{,.packaged}
    done

    ln -sv /usr/lib/systemd/systemd-udevd ${pkgdir}/usr/bin/udevd

    mkdir -pv ${pkgdir}/etc/systemd/system/getty.target.wants/
    ln -sv ../../../../lib/systemd/system/getty@.service ${pkgdir}/etc/systemd/system/getty.target.wants/getty@tty1.service

    cat > ${pkgdir}/etc/pam.d/systemd-user << "EOF"
account  include system-login
session  required pam_loginuid.so
session  include system-login
EOF
}

after_install() {
    systemd-machine-id-setup
}

generated_files="etc/machine-id \
    etc/udev/hwdb.bin \
    etc/.updated \
    etc/issue"
