# required by transmission, gdl, libmypaint and gimp
#vcs=bzr
#bzrtag=release-${pkgver//\./_}
pkgname=intltool
pkgver=0.51.0
urls="https://launchpad.net/intltool/trunk/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz"
srctar=${pkgname}-${pkgver}.tar.gz
srcdir=${location}/${pkgname}-${pkgver}
relmon_id=1385

build() {
    patch -Np1 -i ../intltool-0.51.0-perl-5.22.patch
    patch -Np1 -i ../intltool-merge-Create-cache-file-atomically.patch
    patch -Np1 -i ../intltool_distcheck-fix.patch
    patch -Np1 -i ../intltool-fixrace.patch  # https://bugs.launchpad.net/intltool/+bug/1687644
    ./configure --prefix=/usr
    make
}

package() {
    make DESTDIR=${pkgdir} install
    install -v -m644 -D doc/I18N-HOWTO \
        ${pkgdir}/usr/share/doc/${pkgname}/I18N-HOWTO
}
