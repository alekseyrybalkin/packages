pkgname=cacerts
SKIP_ARCH_CHECK=1
pkgver=20190604
vcs=mercurial
vcs_pkgname=nss

build() {
    mkdir build pkgdir
    cd build
    cp ../lib/ckfw/builtins/certdata.txt .
    pkgdir=${srcdir}/pkgdir bash ../../make-ca.sh --localdir /etc/ssl/local
}

package() {
    cp -r pkgdir/* ${pkgdir}/
    mkdir -pv ${pkgdir}/etc/ssl/certs/
    ln -sv /etc/ssl/ca-bundle.crt ${pkgdir}/etc/ssl/certs/ca-certificates.crt
}
