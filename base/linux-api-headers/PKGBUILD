pkgname=linux-api-headers
vcs=git
vcs_pkgname=linux
pkgver=5.7.9
gittag=v${pkgver}

build() {
    make mrproper
    make headers_check
}

package() {
    make INSTALL_HDR_PATH=dest headers_install
    find dest/include \( -name .install -o -name ..install.cmd \) -delete
    mkdir -pv ${pkgdir}/usr/include
    cp -rv dest/include/* ${pkgdir}/usr/include
}
