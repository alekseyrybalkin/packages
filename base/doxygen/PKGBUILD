pkgname=doxygen
pkgver=1.8.18
vcs=git
gittag=Release_${pkgver//\./_}
relmon_id=457

build() {
    mkdir build
    cd build
    cmake .. \
        -DCMAKE_INSTALL_PREFIX:PATH=/usr \
        -DPYTHON_EXECUTABLE:FILE=/usr/bin/python
    make
}

package() {
    cd build
    make DESTDIR="${pkgdir}" install
}
