pkgname=libcap
pkgver=2.31
vcs=git
gittag=libcap-${pkgver}
relmon_id=1569

build() {
    sed -i '/install.*STALIBNAME/d' libcap/Makefile
    make GOLANG=no
}

package() {
    make prefix=/usr lib=/lib DESTDIR=${pkgdir} RAISE_SETFCAP=no GOLANG=no install
    chmod -v 755 ${pkgdir}/usr/lib/libcap.so*
    mv ${pkgdir}/usr/{sbin,bin}
}
