pkgname=configs
pkgver=1
vcs=git

prepare() {
    srcfetcher configs
}

build() {
    ./bootstrap
}

package() {
    ./bootstrap install ${pkgdir}
}

after_install() {
    hostconf configs_after_install | while read cmd; do
        ${cmd}
    done
    systemctl daemon-reload
}

after_upgrade() {
    after_install
}
