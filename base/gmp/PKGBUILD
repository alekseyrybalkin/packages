pkgname=gmp
_release=6.2
pkgver=${_release}.0
vcs=mercurial
vcs_pkgname=gmp-${_release}
# 18021:413ede7e6962
hgtag=jinni-gmp-${pkgver}
relmon_id=1186

build() {
    ./.bootstrap
    ./configure --prefix=/usr \
        --enable-cxx \
        --disable-static \
        --build=x86_64-unknown-linux-gnu \
        --docdir=/usr/share/doc/gmp
    make
    make html
}

package() {
    make DESTDIR=${pkgdir} install
    make DESTDIR=${pkgdir} install-html
}
