pkgname=bash
pkgver=5.1.004
vcs=git
# 76404c85d492c001f59f2644074333ffb7608532
gittag=handmade-bash-${pkgver}
relmon_id=166

build() {
    ./configure --prefix=/usr \
        --htmldir=/usr/share/doc/bash \
        --without-bash-malloc \
        --with-installed-readline
    make
}

package() {
    make DESTDIR=${pkgdir} install
    ln -sv bash ${pkgdir}/usr/bin/sh
}
