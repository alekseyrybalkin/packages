pkgname=bash
pkgver=5.0.018
vcs=git
# 36f2c406ff27995392a9247dfa90672fdaf7dc43
gittag=handmade-bash-${pkgver}
relmon_id=166

build() {
    ./configure --prefix=/usr \
        --htmldir=/usr/share/doc/bash \
        --without-bash-malloc \
        --with-installed-readline
    make
}

package() {
    make DESTDIR=${pkgdir} install
    ln -sv bash ${pkgdir}/usr/bin/sh
}
