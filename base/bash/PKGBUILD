pkgname=bash
pkgver=5.0.017
vcs=git
# 9e49d343e3cd7e20dad1b86ebfb764e8027596a7
gittag=jinni-bash-${pkgver}
relmon_id=166

build() {
    ./configure --prefix=/usr \
        --htmldir=/usr/share/doc/bash \
        --without-bash-malloc \
        --with-installed-readline
    make
}

package() {
    make DESTDIR=${pkgdir} install
    ln -sv bash ${pkgdir}/usr/bin/sh
}
