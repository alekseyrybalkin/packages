pkgname=bash
pkgver=5.0.016
vcs=git
# 6c6454cb18d7cd30b3b26d5ba6479431e599f3ed
gittag=jinni-bash-${pkgver}
relmon_id=166

build() {
    ./configure --prefix=/usr \
        --htmldir=/usr/share/doc/bash \
        --without-bash-malloc \
        --with-installed-readline
    make
}

package() {
    make DESTDIR=${pkgdir} install
    ln -sv bash ${pkgdir}/usr/bin/sh
}
