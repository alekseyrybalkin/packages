pkgname=bash
pkgver=5.1.000
vcs=git
# 8868edaf2250e09c4e9a1c75ffe3274f28f38581
gittag=handmade-bash-${pkgver}
relmon_id=166

build() {
    ./configure --prefix=/usr \
        --htmldir=/usr/share/doc/bash \
        --without-bash-malloc \
        --with-installed-readline
    make
}

package() {
    make DESTDIR=${pkgdir} install
    ln -sv bash ${pkgdir}/usr/bin/sh
}
