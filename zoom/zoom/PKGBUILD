NON_FREE=1
#vcs=none
pkgname=zoom
pkgver=5.4.57862.0110
urls="https://zoom.us/client/${pkgver}/zoom_x86_64.pkg.tar.xz"
srctar="zoom_x86_64.pkg.tar.xz"
srcdir=${location}/opt

build() {
    :
}

package() {
    cd ../
    cp -dpr --no-preserve=ownership opt usr ${pkgdir}
    rm -rf ${pkgdir}/usr/share/{pixmaps,mime,applications}
    rm -rf ${pkgdir}/opt/zoom/ringtone/*.pcm
}
