pkgname=babl
pkgver=0.1.72+
vcs=git
#FIXME using git master
gittag=f9009f8d9b29cf7d96f251bcfbdb8402298a76b5
relmon_id=7843

build() {
    mkdir build-babl
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        -D buildtype=release \
        -D b_lto=true \
        -D with-docs=false \
        . build-babl
    ninja -C build-babl
}

package() {
    DESTDIR=${pkgdir} ninja -C build-babl install
}
