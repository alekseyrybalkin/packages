pkgname=babl
pkgver=0.1.76
vcs=git
gittag=BABL_${pkgver//\./_}
relmon_id=7843

build() {
    mkdir build-babl
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        -D buildtype=release \
        -D b_lto=true \
        -D with-docs=false \
        . build-babl
    ninja -C build-babl
}

package() {
    DESTDIR=${pkgdir} ninja -C build-babl install
}
