pkgname=gimp
pkgver=2.98.0.6
vcs=git
# 172bdbaad3b8e9240349a27d37de72f2a20eb845
gittag=jinni-GIMP_${pkgver//\./_}
relmon_id=1161
updater_rules='skip_big_first'

build() {
    # checking for xgettext version (>= 0.19)... ./configure: line 18500: test: 21-dirty: integer expression expected
    sed -i -e "s/f4/f4 | sed 's\/\-dirty\/\/g'/g" configure.ac

    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --libexecdir=/usr/bin \
        --enable-mp \
        --enable-python \
        --enable-gimp-console \
        --with-libcurl \
        --with-python=no \
        --with-lua=no \
        --with-javascript=no
    make
}

package() {
    make DESTDIR=${pkgdir} install
    ln -sv gimp-2.99 ${pkgdir}/usr/bin/gimp
}
