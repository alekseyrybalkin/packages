pkgname=gimp
pkgver=2.99+
vcs=git
#FIXME using git master
gittag=fcc1c3d380336659300432d7811d6176164085af
relmon_id=1161

build() {
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --libexecdir=/usr/bin \
        --enable-mp \
        --enable-python \
        --enable-gimp-console \
        --with-libcurl \
        --with-python=no \
        --with-lua=no \
        --with-javascript=no
    make
}

package() {
    make DESTDIR=${pkgdir} install
    ln -sv gimp-2.99 ${pkgdir}/usr/bin/gimp
}
