pkgname=gimp
pkgver=2.98.0.1
vcs=git
# 75435c8e6b5ace24f9b01753660511499382f3d9
gittag=jinni-GIMP_${pkgver//\./_}
relmon_id=1161

build() {
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --libexecdir=/usr/bin \
        --enable-mp \
        --enable-python \
        --enable-gimp-console \
        --with-libcurl \
        --with-python=no \
        --with-lua=no \
        --with-javascript=no
    make
}

package() {
    make DESTDIR=${pkgdir} install
    ln -sv gimp-2.99 ${pkgdir}/usr/bin/gimp
}
