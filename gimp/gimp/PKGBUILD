pkgname=gimp
pkgver=2.98.0.3
vcs=git
# 1171798ca60eee35c6b7f64e82c797501c2d9149
gittag=jinni-GIMP_${pkgver//\./_}
relmon_id=1161
updater_rules='skip_big_first'

build() {
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --libexecdir=/usr/bin \
        --enable-mp \
        --enable-python \
        --enable-gimp-console \
        --with-libcurl \
        --with-python=no \
        --with-lua=no \
        --with-javascript=no
    make
}

package() {
    make DESTDIR=${pkgdir} install
    ln -sv gimp-2.99 ${pkgdir}/usr/bin/gimp
}
