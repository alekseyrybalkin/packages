pkgname=appstream-glib
pkgver=0.7.18
vcs=git
gittag=appstream_glib_${pkgver//\./_}
relmon_id=14018
updater_rules='lstrip_appstream_glib'

build() {
    mkdir build
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        -D rpm=false \
        -D stemmer=false \
        -D dep11=false \
        . build
    ninja -C build
}

package() {
    DESTDIR=${pkgdir} ninja -C build install
}
