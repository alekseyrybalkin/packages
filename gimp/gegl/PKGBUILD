pkgname=gegl
pkgver=0.4.22.0.2
vcs=git
# 53e8d127085f93305ed4a7536e6df27556a1708a
gittag=jinni-GEGL_${pkgver//\./_}

build() {
    mkdir build-gegl
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        -D workshop=true \
        . build-gegl
    ninja -C build-gegl
}

package() {
    DESTDIR=${pkgdir} ninja -C build-gegl install
}
