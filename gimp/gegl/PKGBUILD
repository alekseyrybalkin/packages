pkgname=gegl
pkgver=0.4.26
vcs=git
gittag=GEGL_${pkgver//\./_}

build() {
    mkdir build-gegl
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        -D workshop=true \
        . build-gegl
    ninja -C build-gegl
}

package() {
    DESTDIR=${pkgdir} ninja -C build-gegl install
}
