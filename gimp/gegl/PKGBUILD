pkgname=gegl
pkgver=0.4.22.0.1
vcs=git
# 1d530816266b52c8788bbe1504c5b2d6eceba036
gittag=jinni-GEGL_${pkgver//\./_}

build() {
    mkdir build-gegl
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        -D workshop=true \
        . build-gegl
    ninja -C build-gegl
}

package() {
    DESTDIR=${pkgdir} ninja -C build-gegl install
}
