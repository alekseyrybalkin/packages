pkgname=gegl
pkgver=0.4.26.0.1
vcs=git
# 6439e7426580894e6e3e18fe164c8c0e7de28f81
gittag=jinni-GEGL_${pkgver//\./_}

build() {
    mkdir build-gegl
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        -D workshop=true \
        -D sdl2=disabled \
        . build-gegl
    ninja -C build-gegl
}

package() {
    DESTDIR=${pkgdir} ninja -C build-gegl install
}
