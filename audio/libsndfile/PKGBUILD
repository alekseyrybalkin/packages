pkgname=libsndfile
pkgver=1.0.29
vcs=git
gittag=v${pkgver}
relmon_id=13277

build() {
    mkdir build
    cd build
    cmake .. \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib \
        -DCMAKE_BUILD_TYPE=RELEASE \
        -DBUILD_TESTING=OFF
    make
}

package() {
    cd build
    make DESTDIR=${pkgdir} install
}
