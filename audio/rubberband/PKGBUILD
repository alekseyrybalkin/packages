pkgname=rubberband
pkgver=1.9.1
vcs=mercurial
hgtag=v${pkgver}
relmon_id=4222

build() {
    mkdir build
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        -D fft=kissfft \
        . build
    ninja -C build
}

package() {
    DESTDIR=${pkgdir} ninja -C build install
}
