pkgname=pipewire
pkgver=0.2.7
vcs=git
gittag=${pkgver}
relmon_id=57357
relmon_rules='skip_big_third'

build() {
    mkdir build
    meson --prefix=/usr \
        -D libexecdir=/usr/lib \
        -D sysconfdir=/etc \
        -D gstreamer=disabled \
        . build
    ninja -C build
}

package() {
    DESTDIR=${pkgdir} ninja -C build install
}
