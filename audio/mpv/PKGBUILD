pkgname=mpv
vcs=git
pkgver=0.33.0
gittag=v${pkgver}
relmon_id=5348

build() {
    waf configure --prefix=/usr \
        --confdir=/etc/mpv \
        --disable-pulse \
        --disable-libarchive \
        --disable-lua \
        --disable-x11 \
        --disable-lcms2 \
        --enable-libmpv-shared
    waf build
}

package() {
    waf install --destdir=${pkgdir}
}
