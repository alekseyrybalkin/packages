pkgname=ffmpeg
pkgver=4.3.1
vcs=git
gittag=n${pkgver}
relmon_id=5405
updater_rules='lstrip_n'

build() {
    export TMPDIR=${location}/tmp
    mkdir ${TMPDIR}
    sed -i 's/-lflite"/-lflite -lasound"/' configure
    ./configure --prefix=/usr \
        --enable-gpl \
        --enable-version3 \
        --enable-nonfree \
        --disable-static \
        --enable-shared \
        --disable-debug \
        --enable-libmp3lame \
        --enable-libtheora \
        --enable-libvorbis \
        --enable-libvpx \
        --enable-openssl \
        --enable-libxcb \
        --disable-sdl2
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
