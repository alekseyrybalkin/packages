pkgname=ffmpeg
pkgver=4.3.2
vcs=git
gittag=n${pkgver}
relmon_id=5405
updater_rules='lstrip_n'

build() {
    export TMPDIR=${location}/tmp
    mkdir ${TMPDIR}
    sed -i 's/-lflite"/-lflite -lasound"/' configure
    ./configure --prefix=/usr \
        --disable-static \
        --disable-debug \
        --enable-gpl \
        --enable-version3 \
        --enable-nonfree \
        --enable-shared \
        --enable-openssl \
        --enable-libxcb \
        --disable-libmp3lame \
        --disable-libvpx \
        --disable-libtheora \
        --disable-libvorbis \
        --disable-sdl2 \
        --disable-xlib \
        --disable-libxcb \
        --disable-libxcb-shm \
        --disable-libxcb-xfixes \
        --disable-libxcb-shape
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
