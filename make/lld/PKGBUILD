pkgname=lld
pkgver=10.0.0
vcs=git
vcs_pkgname=llvm
gittag=llvmorg-${pkgver}
relmon_id=1830
updater_rules='lstrip_org'

build() {
    cd lld
    mkdir -v build
    cd build
    cmake \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DBUILD_SHARED_LIBS=ON \
        -DLLVM_LINK_LLVM_DYLIB=ON \
        -G Ninja ..
    ninja
}

package() {
    cd lld
    cd build
    DESTDIR=${pkgdir} ninja install
}
