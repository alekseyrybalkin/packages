pkgname=lld
#FIXME use final 10.0.0 release
_ver=10.0.0
_rc=-rc6
pkgver=${_ver}${_rc//-/\.}
vcs=git
vcs_pkgname=llvm
gittag=llvmorg-${_ver}${_rc}
relmon_id=1830
relmon_rules="skip_init,skip_rc"

build() {
    cd lld
    mkdir -v build
    cd build
    cmake \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DBUILD_SHARED_LIBS=ON \
        -DLLVM_LINK_LLVM_DYLIB=ON \
        -G Ninja ..
    ninja
}

package() {
    cd lld
    cd build
    DESTDIR=${pkgdir} ninja install
}
