pkgname=openmp
pkgver=10.0.1
vcs=git
vcs_pkgname=llvm
gittag=llvmorg-${pkgver}
relmon_id=1830
updater_rules='lstrip_org'

build() {
    cd openmp
    mkdir -v build
    cd build
    cmake \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DLIBOMP_INSTALL_ALIASES=OFF \
        -G Ninja ..
    ninja
}

package() {
    cd openmp
    cd build
    DESTDIR=${pkgdir} ninja install
}
