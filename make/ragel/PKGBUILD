pkgname=ragel
pkgver=7.0.3
vcs=git
gittag=${pkgver}
relmon_id=12105

build() {
    sed -i -e '/doc\//d' configure.ac
    sed -i -e 's/ doc//g' Makefile.am
    ./autogen.sh
    ./configure --prefix=/usr \
        --with-colm=/usr \
        --disable-manual
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
