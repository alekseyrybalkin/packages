keep_la_files=1
pkgname=colm
pkgver=0.14.2
vcs=git
# 0cf396224409c6a3e3c0c4f252865f77bd4c6b5f
gittag=handmade-colm-${pkgver}
relmon_id=12622

build() {
    sed -i -e '/doc\//d' configure.ac
    sed -i -e 's/ doc//g' Makefile.am
    ./autogen.sh
    ./configure --prefix=/usr
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
