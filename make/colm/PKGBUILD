keep_la_files=1
pkgname=colm
pkgver=0.14.6
vcs=git
# 2c520d84df2463d69a28dba9fff5648a841bad74
gittag=handmade-${pkgver}
relmon_id=12622

build() {
    sed -i -e '/doc\//d' configure.ac
    sed -i -e 's/ doc//g' Makefile.am
    ./autogen.sh
    ./configure --prefix=/usr
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
