pkgname=python-pygments
pkgver=2.6.1
vcs=git
vcs_pkgname=pygments
gittag=${pkgver}
relmon_id=3986

build() {
    :
}

package() {
    pip install \
        --no-deps \
        --no-build-isolation \
        --ignore-installed \
        --compile \
        --prefix=/usr \
        --root=${pkgdir} .
}
