pkgname=python-pandas
pkgver=1.0.4
vcs=git
vcs_pkgname=pandas
gittag=v${pkgver}
relmon_id=7578

build() {
    python setup.py build_ext --inplace
}

package() {
    pip install \
        --no-deps \
        --no-build-isolation \
        --ignore-installed \
        --compile \
        --prefix=/usr \
        --root=${pkgdir} .
}
