pkgname=python-lxml
pkgver=4.5.2
vcs=git
vcs_pkgname=lxml
gittag=lxml-${pkgver}
relmon_id=3914

build() {
    # python3
    sed -i -e 's/itervalues/values/g' doc/mkhtml.py

    set +e
    cd doc
    python mkhtml.py html .. ${pkgver}
    mkdir -p ../build/sphinx
    mv html ../build/sphinx/
    set -e
}

package() {
    python-package
}
