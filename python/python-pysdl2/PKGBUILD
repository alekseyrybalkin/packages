pkgname=python-pysdl2
pkgver=0.9.7
vcs=git
vcs_pkgname=py-sdl2
gittag=rel_${pkgver//\./_}
relmon_id=12950

build() {
    if [ -z "${DISABLE_SPHINX}" ]; then
        cd doc
        make html
    fi
}

package() {
    pip install \
        --no-deps \
        --no-build-isolation \
        --ignore-installed \
        --compile \
        --prefix=/usr \
        --root=${pkgdir} .

    if [ -z "${DISABLE_SPHINX}" ]; then
        mkdir -pv ${pkgdir}/usr/share/doc
        cp -r doc/_build/html ${pkgdir}/usr/share/doc/${pkgname}
    fi
}
