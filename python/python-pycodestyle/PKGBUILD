pkgname=python-pycodestyle
pkgver=2.6.0
vcs=git
vcs_pkgname=pycodestyle
gittag=${pkgver}
relmon_id=11773

build() {
    if [ -z "${DISABLE_SPHINX}" ]; then
        cd docs
        make html
    fi
}

package() {
    pip install --no-deps --ignore-installed --prefix=/usr --root=${pkgdir} .
    if [ -z "${DISABLE_SPHINX}" ]; then
        mkdir -pv ${pkgdir}/usr/share/doc
        cp -r docs/_build/html ${pkgdir}/usr/share/doc/python-pycodestyle
    fi
}
