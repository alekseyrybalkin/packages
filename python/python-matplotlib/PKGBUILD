pkgname=python-matplotlib
pkgver=3.3.2
vcs=git
vcs_pkgname=matplotlib
gittag=v${pkgver}
relmon_id=3919

build() {
    # disable installation of jquery-ui
    sed -i -e 's/if (dest \/ name).exists()/if not (dest \/ name).exists()/g' setup.py

    # use system freetype
    cat > setup.cfg << "EOF"
[libs]
system_freetype = true
EOF

    python-build
}

package() {
    python-package
}
