pkgname=python-six
pkgver=1.12.0
vcs=git
vcs_pkgname=six
gittag=${pkgver}
relmon_id=4027

build() {
    python setup.py build
    cd documentation
    make html
}

package() {
    python setup.py install --root=${pkgdir}
    mkdir -pv ${pkgdir}/usr/share/doc
    cp -r documentation/_build/html ${pkgdir}/usr/share/doc/${pkgname}

}
