pkgname=python-six
pkgver=1.15.0
vcs=git
vcs_pkgname=six
gittag=${pkgver}
relmon_id=4027

build() {
    if [ -z "${DISABLE_SPHINX}" ]; then
        cd documentation
        make html
    fi
}

package() {
    pip install \
        --no-deps \
        --no-build-isolation \
        --ignore-installed \
        --compile \
        --prefix=/usr \
        --root=${pkgdir} .

    if [ -z "${DISABLE_SPHINX}" ]; then
        mkdir -pv ${pkgdir}/usr/share/doc
        cp -r documentation/_build/html ${pkgdir}/usr/share/doc/${pkgname}
    fi
}
