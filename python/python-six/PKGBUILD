pkgname=python-six
pkgver=1.14.0
vcs=git
vcs_pkgname=six
gittag=${pkgver}
relmon_id=4027

build() {
    python setup.py build
    if [ -z "${DISABLE_SPHINX}" ]; then
        cd documentation
        make html
    fi
}

package() {
    python setup.py install --root=${pkgdir}
    if [ -z "${DISABLE_SPHINX}" ]; then
        mkdir -pv ${pkgdir}/usr/share/doc
        cp -r documentation/_build/html ${pkgdir}/usr/share/doc/${pkgname}
    fi

}
