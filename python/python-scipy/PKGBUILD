pkgname=python-scipy
pkgver=1.5.0rc2
vcs=git
vcs_pkgname=scipy
gittag=v${pkgver}
relmon_id=4768

build() {
    python setup.py config_fc --fcompiler=gnu95 build
}

package() {
    python setup.py config_fc --fcompiler=gnu95 install \
        --prefix=/usr --root=${pkgdir} --optimize=1

    rm ${pkgdir}/usr/lib/python3.8/site-packages/scipy/io/tests/data/Transparent\ Busy.ani
}
