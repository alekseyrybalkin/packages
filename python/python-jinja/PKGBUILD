pkgname=python-jinja
pkgver=2.10.3
vcs=git
vcs_pkgname=jinja
gittag=${pkgver}
relmon_id=3894

build() {
    patch -Np1 -i ../sphinx-remove-pallets.diff
    python setup.py build
    cd docs
    make html
}

package() {
    python setup.py install --root=${pkgdir}
    mkdir -pv ${pkgdir}/usr/share/doc
    cp -r docs/_build/html ${pkgdir}/usr/share/doc/python-jinja
}
