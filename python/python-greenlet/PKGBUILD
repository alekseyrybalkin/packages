pkgname=python-greenlet
pkgver=0.4.16
vcs=git
vcs_pkgname=greenlet
gittag=${pkgver}
relmon_id=6870

build() {
    if [ -z "${DISABLE_SPHINX}" ]; then
        cd doc
        make html
    fi
}

package() {
    pip install \
        --no-deps \
        --no-build-isolation \
        --ignore-installed \
        --compile \
        --prefix=/usr \
        --root=${pkgdir} .

    if [ -z "${DISABLE_SPHINX}" ]; then
        mkdir -pv ${pkgdir}/usr/share/doc
        cp -r doc/_build/html ${pkgdir}/usr/share/doc/python-greenlet
    fi
}
