pkgname=python-telethon
SKIP_ARCH_CHECK=1
pkgver=1.10.3
vcs=git
vcs_pkgname=telethon
gittag=v${pkgver}
relmon_id=18912

build() {
    python setup.py build
    if type sphinx-build >/dev/null 2>&1; then
        cd readthedocs
        make html
    fi
}

package() {
    python setup.py install --root=${pkgdir} --optimize=1
    if type sphinx-build >/dev/null 2>&1; then
        mkdir -pv ${pkgdir}/usr/share/doc
        cp -r readthedocs/_build/html ${pkgdir}/usr/share/doc/${pkgname}
    fi
}
