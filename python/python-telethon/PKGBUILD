pkgname=python-telethon
pkgver=1.14.0
vcs=git
vcs_pkgname=telethon
gittag=v${pkgver}
relmon_id=18912

build() {
    if [ -z "${DISABLE_SPHINX}" ]; then
        cd readthedocs
        make html
    fi
}

package() {
    pip install \
        --no-deps \
        --no-build-isolation \
        --ignore-installed \
        --compile \
        --prefix=/usr \
        --root=${pkgdir} .

    if [ -z "${DISABLE_SPHINX}" ]; then
        mkdir -pv ${pkgdir}/usr/share/doc
        cp -r readthedocs/_build/html ${pkgdir}/usr/share/doc/${pkgname}
    fi
}
