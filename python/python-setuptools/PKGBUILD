pkgname=python-setuptools
pkgver=49.2.1
vcs=git
vcs_pkgname=setuptools
gittag=v${pkgver}
relmon_id=4021

build() {
    sed -i -e "s/VERSION/${pkgver}/g" ../bootstrap-fix.patch
    patch -Np1 -i ../bootstrap-fix.patch
    python bootstrap.py

    python-build
}

package() {
    python-package

    # remove files with spaces in filenames
    rm ${pkgdir}/usr/lib/python*/site-packages/setuptools/script*
    rm ${pkgdir}/usr/lib/python*/site-packages/setuptools/command/launcher*
}
