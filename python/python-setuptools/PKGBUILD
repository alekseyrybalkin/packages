pkgname=python-setuptools
pkgver=41.6.0
vcs=git
vcs_pkgname=setuptools
gittag=v${pkgver}
relmon_id=4021

build() {
    sed -i -e 's/launcher manifest/launcher_manifest/g' setuptools/command/easy_install.py
    mv setuptools/command/launcher{\ ,_}manifest.xml
    python bootstrap.py
    python setup.py build
}

package() {
    PYVERSION=`python -c "import sys; print('{}.{}'.format(sys.version_info.major, sys.version_info.minor))"`
    python setup.py install --prefix=/usr \
        --root=${pkgdir} --optimize=1 --skip-build
    # remove files with spaces in filenames
    rm ${pkgdir}/usr/lib/python${PYVERSION}/site-packages/setuptools/script*
}
