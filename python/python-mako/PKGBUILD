pkgname=python-mako
pkgver=1.1.3
vcs=git
vcs_pkgname=mako
gittag=rel_${pkgver//\./_}
relmon_id=3915

build() {
    :
}

package() {
    pip install \
        --no-deps \
        --no-build-isolation \
        --ignore-installed \
        --compile \
        --prefix=/usr \
        --root=${pkgdir} .
}
