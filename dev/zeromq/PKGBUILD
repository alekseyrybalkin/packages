pkgname=zeromq
pkgver=4.3.2
vcs=git
vcs_pkgname=libzmq
gittag=v${pkgver}
relmon_id=16245

build() {
    ./autogen.sh
    ./configure prefix=/usr \
        --without-pgm \
        --without-libsodium \
        --without-documentation \
        --enable-static
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
