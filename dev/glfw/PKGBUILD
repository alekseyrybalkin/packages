pkgname=glfw
pkgver=3.3.2
vcs=git
gittag=${pkgver}
relmon_id=1180

build() {
    mkdir build
    cd build
    cmake .. \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib \
        -DBUILD_SHARED_LIBS=ON
    make docs
}

package() {
    cd build
    make DESTDIR=${pkgdir} install
}
