_pkgname=xmodmap
pkgname=xorg-${_pkgname}
pkgver=1.0.10
vcs=git
gittag=${_pkgname}-${pkgver}
relmon_id=14960
updater_rules="lstrip_${_pkgname}"

build() {
    ./autogen.sh --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
