pkgname=libxt
pkgver=1.2.1
vcs=git
gittag=libXt-${pkgver}
relmon_id=1793

build() {
    ./autogen.sh --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static \
        --with-appdefaultdir=/etc/X11/app-defaults \
        --libdir=/usr/lib
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
