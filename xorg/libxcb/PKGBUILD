pkgname=libxcb
pkgver=1.14
vcs=git
gittag=libxcb-${pkgver}
relmon_id=1767

build() {
    sed -e "s/pthread-stubs//" -i configure.ac
    ./autogen.sh --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static \
        --enable-xinput --enable-xkb \
        --docdir='${datadir}'/doc/${pkgname} \
        --libdir=/usr/lib
    make
}

package() {
    make DESTDIR=${pkgdir} install
}
